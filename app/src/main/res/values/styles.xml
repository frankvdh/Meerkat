<resources>
    <style name="GreenText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00FF00</item>
    </style>

    <!-- Style for action bar. -->
    <style name="ActionBarStyle" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">@color/teal_700</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:drawableTop">@color/teal_200</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
         <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryDark">#b00000</item>
        <item name="android:titleTextColor">@color/teal_700</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Small</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Widget.Theme.Fullscreen.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Widget.Theme.Fullscreen.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>